@model IEnumerable<InAndOut.Models.Item>

 <div class="container p-3">
     <div class="row pt-4">
         <div class="col-6">
             <h2 class="text-primary">Novel Tracker</h2>
         </div>
         <div class="col-6">
             <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create New Item</a>
         </div>
     </div>
     <br/>

     @if (Model.Count() > 0)
     {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Genre
                    </th>
                    <th>
                        Rating
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="25%">@item.Title</td>
                        <td width="25%">@item.Genre</td>
                        <td width="25%">@item.Rating</td>
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Item" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
     }
     else
     {
         <p>No items created yet</p>
     }

 </div>